}


/*判断输赢*/
{
	int a,i,n,fs=0;
	printf("请输入你想玩的局数：");
	scanf("%d",&n);

	printf("0-剪刀 1-石头 2-布 ");
    for ( i=0; i<=n; i++ )
	{
	printf("玩家输入：");

	scanf("%d",&a);

	if (dnc==0)
	{
		if(a==0) printf("平局");
		else if (a==1) {
			printf("你赢了");
			fs++;
		}
		else printf("你输了");
	}

	if (dnc==1)
	{
		if (a==0) printf("你输了");
		else if (a==1) printf("平局");
		else {
			printf("你赢了");
			fs++;
		}
	}

	if (dnc==2)
	{
		if (a==0) {
			printf("你赢了");
			fs++;
		}
		else if (a==1) printf("你输了");
		else printf("平局");
	}
	}
}
