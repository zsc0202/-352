	int js;
	int win;
};
/*主函数*/
void main()
{
	int n,dnc;
	int k;
	int panshu();
    /*struct player p;*/
	if(k=getchar())
	{

	int wanjia(struct player);
	srand((unsigned)time(NULL));
	n=rand()%(101-0+1)+0;

	dnc=n%3;
	switch (dnc)
	{
	case 0: printf("电脑出剪刀");break;
	case 1: printf("电脑出石头");break;
	case 2: printf("电脑出布");break;

	}

	}
}
/*菜单项*/
int panshu()
{
	char k;
